<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar con título -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title="Detalles del cliente"
        android:titleTextColor="@android:color/white" />

    <!-- Contenido scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Imagen -->
            <ImageView
                android:id="@+id/ivFotoCliente"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/logo_gympro_sinfondo"
                android:layout_marginBottom="24dp" />

            <!-- Nombre -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textSize="14sp"
                android:background="@drawable/input_borde_azul"
                android:padding="10dp"
                android:textColor="@color/blue"
                android:layout_marginBottom="16dp" />

            <!-- Apellidos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellidos"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/etApellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textSize="14sp"
                android:background="@drawable/input_borde_azul"
                android:padding="10dp"
                android:textColor="@color/blue"
                android:layout_marginBottom="16dp" />

            <!-- DNI -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DNI"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/etDni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textSize="14sp"
                android:background="@drawable/input_borde_azul"
                android:padding="10dp"
                android:textColor="@color/blue"
                android:layout_marginBottom="16dp" />

            <!-- Fecha nacimiento -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de nacimiento"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/etFechaNacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textSize="14sp"
                android:background="@drawable/input_borde_azul"
                android:padding="10dp"
                android:textColor="@color/blue"
                android:layout_marginBottom="16dp" />

            <!-- Teléfono -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teléfono"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/etTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textSize="14sp"
                android:background="@drawable/input_borde_azul"
                android:padding="10dp"
                android:textColor="@color/blue"
                android:layout_marginBottom="16dp" />

            <!-- Correo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo electrónico"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/etCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textSize="14sp"
                android:background="@drawable/input_borde_azul"
                android:padding="10dp"
                android:textColor="@color/blue"
                android:layout_marginBottom="16dp" />

            <!-- Clases (grupos asignados) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clases asignadas"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvClasesCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_borde_azul"
                android:padding="12dp"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:layout_marginBottom="24dp" />

            <!-- Botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnEliminarCliente"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Eliminar cliente"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnEditarCliente"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Editar cliente"
                    android:backgroundTint="@color/blue"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
