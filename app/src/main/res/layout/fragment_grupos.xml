<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.grupos.GruposFragment">

    <!-- Botón de crear grupo (pantalla completa arriba) -->
    <Button
        android:id="@+id/btnCrearGrupo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Añadir grupo"
        android:drawableStart="@android:drawable/ic_input_add"
        android:backgroundTint="@color/blue"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="12dp"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Campo de búsqueda -->
    <EditText
        android:id="@+id/etBuscarGrupo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Buscar grupo..."
        android:drawableStart="@android:drawable/ic_menu_search"
        android:padding="12dp"
        android:textColor="@color/blue"
        android:textColorHint="@color/blue"
        android:backgroundTint="@color/blue"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnCrearGrupo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGrupos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/etBuscarGrupo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
