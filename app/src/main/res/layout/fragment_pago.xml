<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ScrollView para desplazar el contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Cliente -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cliente"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvClienteSeleccionado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Selecciona un cliente"
                    android:padding="10dp"
                    android:background="@drawable/input_borde_azul"
                    android:textColor="@color/blue"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnSeleccionarCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buscar"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/blue"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Mes -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mes"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerMes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_borde_azul"
                android:padding="10dp"
                android:layout_marginBottom="16dp"
                android:spinnerMode="dropdown" />

            <!-- A침o -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A침o"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerAnio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_borde_azul"
                android:padding="10dp"
                android:layout_marginBottom="24dp"
                android:spinnerMode="dropdown" />

            <!-- Bot칩n Registrar -->
            <Button
                android:id="@+id/btnRegistrarPago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar pago"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/blue"
                android:layout_marginBottom="12dp" />

            <!-- Bot칩n Ver Pagos -->
            <Button
                android:id="@+id/btnVerPagos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver pagos"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/darker_gray" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
