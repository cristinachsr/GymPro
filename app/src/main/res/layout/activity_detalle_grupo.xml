<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar con título y flecha -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title="Detalles del grupo"
        android:titleTextColor="@android:color/white" />

    <!-- Contenido desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Imagen del grupo -->
            <ImageView
                android:id="@+id/ivFotoGrupo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:layout_marginBottom="16dp"
                android:src="@drawable/logo_gympro_sinfondo" />

            <!-- Nombre -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etNombreGrupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_borde_azul"
                android:padding="10dp"
                android:textSize="14sp"
                android:enabled="false"
                android:textColor="@color/blue"
                android:layout_marginBottom="16dp" />

            <!-- Monitor -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monitor"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etMonitorGrupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_borde_azul"
                android:padding="10dp"
                android:textSize="14sp"
                android:enabled="false"
                android:textColor="@color/blue"
                android:layout_marginBottom="16dp" />

            <!-- Descripción -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etDescripcionGrupo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/input_borde_azul"
                android:gravity="top"
                android:padding="10dp"
                android:textSize="14sp"
                android:enabled="false"
                android:textColor="@color/blue"
                android:layout_marginBottom="24dp" />

            <!-- Botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnEliminarGrupo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Eliminar"
                    android:textAllCaps="false"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:textColor="@android:color/white"
                    android:drawableStart="@android:drawable/ic_menu_delete"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnEditarGrupo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Editar grupo"
                    android:backgroundTint="@color/blue"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
