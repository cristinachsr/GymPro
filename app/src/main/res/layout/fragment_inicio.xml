<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo normal -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/chica_gym1"
        android:contentDescription="Fondo" />

    <!-- Capa semitransparente para efecto de aclarado -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66FFFFFF" /> <!-- Blanco con 40% opacidad -->

    <!-- Contenido alineado abajo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- LOGO ENCIMA DE LOS BOTONES -->

        <!-- Fila: Clientes y Grupos -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <!-- CLIENTES -->
            <FrameLayout
                android:id="@+id/btnClientes"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginEnd="16dp"
                android:background="@color/blue_boton"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:padding="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/clientes_sinfondo"
                    android:contentDescription="Clientes" />
            </FrameLayout>

            <!-- GRUPOS -->
            <FrameLayout
                android:id="@+id/btnGrupos"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="16dp"
                android:background="@color/blue_boton"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:padding="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/grupos_sinfondo"
                    android:contentDescription="Grupos" />
            </FrameLayout>
        </LinearLayout>

        <!-- MONITORES -->
        <FrameLayout
            android:id="@+id/btnMonitores"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@color/blue_boton"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/monitores_sinfondo"
                android:contentDescription="Monitores" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
