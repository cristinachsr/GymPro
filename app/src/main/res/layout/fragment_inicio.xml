<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:id="@+id/tvBienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIENVENIDO A"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="28sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- Logo más grande -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="220dp"
            android:layout_height="120dp"
            android:src="@drawable/logo_gympro"
            android:scaleType="fitCenter"
            android:contentDescription="Logo del gimnasio"
            android:layout_marginBottom="32dp" />

        <!-- CLIENTES -->
        <LinearLayout
            android:id="@+id/btnClientes"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:background="@color/blue"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/clientes"
                android:contentDescription="Clientes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLIENTES"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- GRUPOS -->
        <LinearLayout
            android:id="@+id/btnGrupos"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:background="@color/blue"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/grupos"
                android:contentDescription="Grupos" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GRUPOS"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- MONITORES -->
        <LinearLayout
            android:id="@+id/btnMonitores"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_marginBottom="32dp"
            android:orientation="vertical"
            android:background="@color/blue"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/monitores"
                android:contentDescription="Monitores" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MONITORES"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
